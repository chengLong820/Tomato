<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tomato">

    <application
        android:name=".TomatoClockApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tomato">
        <activity android:name=".ui.quit.LogOutActivity"></activity>
        <activity
            android:name=".ui.login.RegisterActivity"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"></activity>
        <activity
            android:name=".ui.login.LogActivity"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.data.DataActivity" />
        <activity
            android:name=".ui.set.SetActivity"
            android:theme="@style/Theme.Dialog" />
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tomato.NoActionBar" />
    </application>

</manifest>